<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('./partials/head', {pageName: "ULAgenda"}); %>
    <link rel="stylesheet" href="/css/agendas/agendas.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <%- include('./partials/header', {user: true}); %>
    </header>

    <div class="container">

        <div class="agendasOptions">
            <a href="/search" class="search-link">
                <i class="fa-solid fa-magnifying-glass"></i>
                Rechercher des rendez-vous
            </a>
        </div>

        <!-- Contenu principal -->
        <div class="main-content">

            <!-- Pop-up pour ajouter un nouvel agenda -->
            <div id="agendaModal" class="modal" style="display:none;">
                <div class="modal-content">
                    <span class="close-button">&times;</span>
                    <h2>Créer un nouvel agenda</h2>
                    <input type="text" id="agendaName" placeholder="Nom de l'agenda" required>
                    <button id="addAgendaButton">Ajouter Agenda</button>
            </div>

            <div id="confirmDeleteModal" class="modal" style="display:none;">
                <div class="modal-content">
                    <span class="close-button" onclick="closeModal(this.parentNode.parentNode)">&times;</span>
                    <h2>Confirmer la suppression</h2>
                    <p>Voulez-vous vraiment supprimer cet agenda ?</p>
                    <button id="confirmDeleteButton">Supprimer</button>
                    <button id="annuler" onclick="closeModal(this)">Annuler</button>
                </div>
            </div>

            <div id="confirmRenameModal" class="modal" style="display:none;">
                <div class="modal-content">
                    <span class="close-button" onclick="closeModal(this.parentNode.parentNode)">&times;</span>
                    <h2>Nouveau titre</h2>
                    <input type="text" id="inputAgendaName" name="name" required minlength="4" maxlength="16" size="10" />
                    <button id="confirmRenameButton">Renommer</button>
                    <button id="annuler" onclick="closeModal(this)">Annuler</button>
                </div>
            </div>

            <div class="calendar newAgenda">
                <div class="addCalendarBody"> 
                    <button class="add-button" style="height:75px; width:75px;">+</button>
                </div>
            </div>

            <!-- Les agendas seront ajoutés ici -->

            <!-- Section des agendas partagés -->
            <% if (agendas.some(a => a.accessLevel !== 'owner')) { %>
                <div class="agenda-section">
                    <div class="section-header">
                        <h2>
                            <i class="fas fa-share-alt"></i>
                            Agendas Partagés
                            <span class="count-badge">
                                <%= agendas.filter(a => a.accessLevel !== 'owner').length %>
                            </span>
                        </h2>
                    </div>

                    <div class="calendars-grid">
                        <% agendas.filter(a => a.accessLevel !== 'owner').forEach(function(agenda) { %>
                            <div class="calendar shared-calendar" data-id="<%= agenda._id %>" onclick="redirectToAgenda('<%= agenda._id %>')">
                                <span class="access-level-badge <%= agenda.accessLevel %>">
                                    <%= agenda.accessLevel %>
                                </span>
                                <div class="header-calendar">
                                    <div class="header-actions">
                                        <% if (agenda.accessLevel === 'admin') { %>
                                            <button class="edit-button" onclick="toggleEditMode(this, event)" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <div class="dropdown">
                                                <button class="options-button" onclick="toggleDropdown(event, this)" title="Plus d'options">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <div class="dropdown-content">
                                                    <a href="/agendas/<%= agenda._id %>/share" onclick="event.stopPropagation()">
                                                        <i class="fas fa-share-alt"></i> Partager
                                                    </a>
                                                    <a href="#" onclick="removeAgenda(this, event)" data-agenda-id="<%= agenda._id %>">
                                                        <i class="fas fa-trash"></i> Supprimer
                                                    </a>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="content-calendar">
                                    <a class="title-view"><%= agenda.name %></a>
                                    <% if (agenda.accessLevel === 'admin' || agenda.accessLevel === 'contribute') { %>
                                        <span class="edit-title" style="display: none;" onclick="stopEventPropagation(event)">
                                            <input type="text" value="<%= agenda.name %>" />
                                        </span>
                                    <% } %>
                                </div>
                            
                                <div class="calendar-info">
                                    <% if (agenda.sharedBy) { %>
                                        <div class="shared-by">
                                            <small>
                                                Partagé par : <%= agenda.sharedBy.pseudo %>
                                            </small>
                                        </div>
                                    <% } %>
                            
                                    <% if (agenda.settings && (agenda.settings.validFrom || agenda.settings.validUntil)) { %>
                                        <div class="share-validity">
                                            <small>
                                                <% if (agenda.settings.validFrom) { %>
                                                    À partir du <%= new Date(agenda.settings.validFrom).toLocaleDateString() %>
                                                <% } %>
                                                <% if (agenda.settings.validUntil) { %>
                                                    <%= agenda.settings.validFrom ? ' - ' : '' %>
                                                    Jusqu'au <%= new Date(agenda.settings.validUntil).toLocaleDateString() %>
                                                <% } %>
                                            </small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        </div> 
        </div>
    </div>

    <footer class="footer">
        <%- include('./partials/footer', {user: {}}); %>
    </footer>

    <!-- Template pour les messages d'erreur/succès -->
    <div class="toast-container" style="display: none;">
        <div class="toast">
            <div class="toast-content"></div>
            <button class="toast-close">&times;</button>
        </div>
    </div>

    <script src="/javascripts/agendas/agendas.js"></script>
</body>
</html>
