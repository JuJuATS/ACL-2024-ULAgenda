<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mes Préréglages</title>
    <style>
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .action-buttons form {
            margin: 0;
        }
    </style>
</head>
<body>
    <h1>Mes Préréglages</h1>

    <%- include('../partials/flashMessages') %>

    <table border="1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Couleur</th>
                <th>Priorité</th>
                <th>Récurrence</th>
                <th>Durée par défaut</th>
                <th>Description</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (presets.length === 0) { %>
                <tr>
                    <td colspan="8">Aucun préréglage trouvé.</td>
                </tr>
            <% } else { %>
                <% presets.forEach(preset => { %>
                    <tr>
                        <td><%= preset.name %></td>
                        <td style="background-color: <%= preset.color %>;">&nbsp;</td>
                        <td><%= preset.priority %></td>
                        <td><%= preset.recurrence %></td>
                        <td><%= preset.duration %> minutes</td>
                        <td><%- preset.description ? preset.description : '<i>Aucune</i>' %></td>
                        <td colspan="2">
                            <div class="action-buttons">
                                <button onclick="window.location.href='/presets/<%= preset._id %>'">Modifier</button>
                                <form action="/presets/<%= preset._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer ce préréglage ?')">
                                    <button type="submit">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>

    <a href="/presets/new">Créer un nouveau préréglage</a>
</body>
</html>
